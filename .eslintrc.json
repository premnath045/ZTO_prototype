{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": "plugin:react/recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "indent": [
            "warn",
            2
        ], // Use 2 spaces for indentation
        "quotes": [
            "warn",
            "single"
        ], // Use single quotes
        "semi": [
            "warn",
            "always"
        ],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react-hooks/rules-of-hooks": "off", // Enforce rules of hooks
        "react-hooks/exhaustive-deps": "off", // Check dependencies for hooks
        "react/no-unescaped-entities": "off",
        "react/jsx-key": "off"
    }
}